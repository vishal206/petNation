<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/appBackground"
    tools:context=".Store_Fragment.store_buy">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        app:cardCornerRadius="8dp"
        android:backgroundTint="@color/appBackground"
        app:cardElevation="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <ImageView
                android:id="@+id/food_img2"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/food_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:text="name"
                android:textColor="#000000"
                android:textSize="18sp"
                android:fontFamily="@font/lora_bold" />

            <TextView
                android:id="@+id/food_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:text="brand"
                android:textColor="#000000"
                android:textSize="18sp"
                android:fontFamily="@font/lora_medium"/>

            <TextView
                android:id="@+id/food_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:text="food desc"
                android:textColor="#000000"
                android:textSize="18sp"
                android:fontFamily="@font/lora_medium"/>

            <TextView
                android:id="@+id/food_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:text="amount"
                android:textColor="#000000"
                android:textSize="18sp"
                android:fontFamily="@font/lora_medium" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/quantity_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:hint="Quantity"
        android:textColor="@color/black"
        android:textColorHint="@color/appUnselected"
        android:fontFamily="@font/lora_medium"
        android:inputType="number"
        android:padding="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginLeft="14dp"
            android:fontFamily="@font/lora_bold"
            android:text="Amount:          "
            android:textColor="@color/appThemeColor"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/petcoin" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="14dp"
            android:background="@drawable/my_green_button"
            android:text="Pay"
            android:textColor="@color/appBackground"
            android:fontFamily="@font/lora_bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView69"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_margin="10dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:textColor="#00897B"
        android:textSize="24sp" />


</LinearLayout>